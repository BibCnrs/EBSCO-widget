{
    "src_folders": ["."],
    "test_settings": {
        "default": {
            "test_runner": {
                "type": "mocha",
                "options": {
                    "ui": "bdd",
                    "reporter": "list"
                }
            },
            "launch_url": "http://app",
            "selenium_host"  : "hub",
            "desiredCapabilities": {
                "browserName": "chrome"
            },
            "screenshots": {
                "enabled": true,
                "on_failure": true,
                "path": "tests_output"
            }
        },
        "firefox": {
            "desiredCapabilities": {
                "browserName": "firefox"
            }
        }
    }
}
